<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.unisc.pdm.designcrud" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.ListViewLoader"
            android:label="@string/title_activity_list_view_loader" >
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.ListaPessoa"
            android:label="@string/title_activity_lista_pessoa"
            android:parentActivityName="br.unisc.pdm.trabalhodispositivos.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unisc.pdm.trabalhodispositivos.Home" />
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.FormPessoa"
            android:label="@string/title_activity_form_pessoa"
            android:parentActivityName="br.unisc.pdm.trabalhodispositivos.ListaPessoa" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unisc.pdm.trabalhodispositivos.ListaPessoa" />
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.VerPessoa"
            android:label="@string/title_activity_ver_pessoa"
            android:parentActivityName="br.unisc.pdm.trabalhodispositivos.ListaPessoa" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.unisc.pdm.trabalhodispositivos.ListaPessoa" />
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.FormEvento"
            android:label="@string/title_activity_form_evento" >
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.ListaEvento"
            android:label="@string/title_activity_lista_evento" >
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.VerEvento"
            android:label="@string/title_activity_ver_evento" >
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.spinner"
            android:label="@string/title_activity_spinner" >
        </activity>
        <activity
            android:name="br.unisc.pdm.trabalhodispositivos.ListaPessoaEvento"
            android:label="@string/title_activity_lista_pessoa_evento" >
        </activity>
    </application>

</manifest>
